{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TS (Bun)",
      "type": "bun",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false
    },
    {
      "name": "Debug Current File (Bun)",
      "type": "bun",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}"
    }
  ]
}